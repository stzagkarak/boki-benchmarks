{
    "machines": {
        "exp-gateway": { "type": "z1d.large", "role": "manager" },
        "exp-sequencer-1": { "type": "z1d.large", "role": "worker", "labels": ["sequencer_node=true"] },
        "exp-engine-1": { "type": "z1d.large", "role": "worker", "labels": [ "engine_node=true" ] },
        "exp-engine-2": { "type": "z1d.large", "role": "worker", "labels": [ "engine_node=true" ] },
        "exp-engine-3": { "type": "z1d.large", "role": "worker", "labels": [ "engine_node=true" ] },
        "exp-storage-1": { "type": "z1d.large", "role": "worker", "mount_instance_storage": "nvme1n1", "labels": ["storage_node=true"] },
        "exp-storage-2": { "type": "z1d.large", "role": "worker", "mount_instance_storage": "nvme1n1", "labels": ["storage_node=true"] },
        "exp-client": { "type": "z1d.large", "role": "client" }
    },
    "services": {
        "zookeeper": { "placement": "bokiexp-gateway" },
        "zookeeper-setup": { "placement": "bokiexp-gateway" },
        "boki-controller": { "placement": "bokiexp-gateway" },
        "boki-gateway": { "placement": "bokiexp-gateway" },
        "boki-storage": { "placement_label": "storage_node", "replicas": 3 }, 
        "boki-sequencer": { "placement_label": "sequencer_node", "replicas": 3 },
        "boki-engine": { "placement_label": "engine_node", "replicas": 8 },
        "consumer-fn": { "placement_label": "engine_node", "replicas": 8 },
        "producer-fn": { "placement_label": "engine_node", "replicas": 8 }
    }
}
